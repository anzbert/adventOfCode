    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/advent_of_code.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "logging": {
                "moduleLoad": false,
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust - Debug executable 'advent_of_code'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=advent_of_code",
                    "--package=advent_of_code"
                ],
                "filter": {
                    "name": "advent_of_code",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust - Debug unit tests in executable 'advent_of_code'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=advent_of_code",
                    "--package=advent_of_code"
                ],
                "filter": {
                    "name": "advent_of_code",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}